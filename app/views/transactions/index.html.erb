<p id="notice"><%= notice %></p>

<h1>Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Wallet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.wallet_id %></td>
        <td><%= link_to 'Show', wallet_transaction_path(transaction.wallet, transaction) %></td>
        <td><%= link_to 'Edit', edit_wallet_transaction_path(transaction.wallet, transaction) %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_wallet_transaction_path(params[:wallet_id]) %>
