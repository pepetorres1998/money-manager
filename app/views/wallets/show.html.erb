<p id="notice"><%= notice %></p>

<h2>
  <strong>Name:</strong>
  <%= @wallet.name %>
</h2>

<table>
  <thead>
    <tr>
      <th>Transactions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wallet.transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.wallet_id %></td>
        <td><%= link_to 'Show', transaction %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'Add new transaction', new_transaction_path %>

