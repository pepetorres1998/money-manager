<p id="notice"><%= notice %></p>

<h2>
  <strong>Wallet:</strong>
  <%= @wallet.name %>
</h2>

<h2> Transactions </h2>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wallet.transactions.each do |transaction| %>
      <tr>

        <td><%= transaction.amount %></td>
        <td><%= transaction.transaction_type %></td>
        <td><%= link_to 'Show', wallet_transaction_path(@wallet, transaction) %></td>
        <td><%= link_to 'Edit', edit_wallet_transaction_path(@wallet, transaction) %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'Add new transaction', new_wallet_transaction_path(@wallet.id) %>

<br />
<br />

<%= link_to 'Edit', edit_wallet_path(@wallet) %> |
<%= link_to 'Back', wallets_path %>
